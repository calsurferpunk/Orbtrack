<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/Multi_Progress_Message_Text"
        style="?attr/dialogStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/Multi_Progress_Bar_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:visibility="invisible">
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/Multi_Progress_Bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            app:indicatorColor="?attr/colorAccent"/>

        <TextView
            android:id="@+id/Multi_Progress_Percent_Text"
            style="?attr/dialogStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/Multi_Progress_Message_Text2"
        style="?attr/dialogStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/Multi_Progress_Bar_Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/Multi_Progress_Bar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            app:indicatorColor="?attr/colorAccent"/>

        <TextView
            android:id="@+id/Multi_Progress_Percent_Text2"
            style="?attr/dialogStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>