<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash screens -->
    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen_app</item>
    </style>
    <style name="GoogleDriveSplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen_google_drive</item>
    </style>
    <style name="DropboxSplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:windowBackground">@drawable/splash_screen_dropbox</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogBase" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">?attr/pageHighlightBackground</item>
        <item name="android:selectableItemBackground">@color/transparent</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
    </style>
    
    <style name="LightDialog" parent="DialogBase">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="DarkDialog" parent="DialogBase">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/purple</item>
    </style>

    <!-- Preferences -->
    <style name="LightPreferenceOverlay" parent="PreferenceThemeOverlay">
        <item name="android:tint">@color/black</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="DarkPreferenceOverlay" parent="PreferenceThemeOverlay">
