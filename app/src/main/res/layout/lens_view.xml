<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    <TextView
        android:id="@+id/Lens_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/Lens_Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.nikolaiapps.orbtrack.FloatingActionStateButtonMenu
            android:id="@+id/Lens_Settings_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:imageTint="?attr/defaultTextColor"
            app:backgroundTint="?attr/pageBackground"
            android:orientation="vertical"/>

        <LinearLayout
            android:id="@+id/Lens_Button_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Lens_Select_Button"
                style="@style/MaterialButton"
                android:text="@string/title_select"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Lens_Reset_Button"
                style="@style/MaterialButton"
                android:text="@string/title_reset"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Lens_Cancel_Button"
                style="@style/MaterialButton"
                android:text="@string/title_cancel"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Lens_Floating_Button_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:orientation="vertical"
            android:paddingBottom="24dp">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/Lens_Fullscreen_Button"
                style="@style/FloatingButton"
                android:alpha="0.7"
                app:backgroundTint="@color/transparent"
                app:srcCompat="@drawable/ic_fullscreen_white"
                app:fabSize="mini"
                android:contentDescription="@string/title_unknown"/>
        </LinearLayout>

        <TextView
            android:id="@+id/Lens_Help_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:gravity="center"
            android:text="@string/title_select"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="?attr/columnTitleTextColor"
            android:background="?attr/columnBackground"
            android:visibility="gone"/>

        <com.nikolaiapps.orbtrack.PlayBar
            android:id="@+id/Lens_Play_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?attr/pageTitleBackground"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>