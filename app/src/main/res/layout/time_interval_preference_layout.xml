<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:text="@string/title_every"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="?attr/defaultTextColor"/>

    <com.nikolaiapps.orbtrack.IconSpinner
        android:id="@+id/Time_Interval_Preference_List"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="@string/text_at"
        android:textColor="?attr/defaultTextColor"/>

    <com.nikolaiapps.orbtrack.TimeInputView
        android:id="@+id/Time_Interval_Preference_Time_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="?attr/defaultTextColor"/>
</LinearLayout>