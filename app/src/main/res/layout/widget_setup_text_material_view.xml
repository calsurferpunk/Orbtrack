                    android:id="@+id/Widget_Setup_Pass_Start_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <TableRow android:id="@+id/Widget_Setup_Pass_End_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
