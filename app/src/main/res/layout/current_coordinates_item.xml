<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Coordinate_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <View android:id="@+id/Coordinate_Divider" style="@style/DividerThin" android:visibility="gone"/>

    <TextView
        android:id="@+id/Coordinate_Title_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="2dp"
        android:background="?attr/viewPagerBackground"
        android:textColor="?attr/defaultTextColor"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/Coordinate_Time_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:padding="2dp"
            android:textColor="?attr/defaultTextColor"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/Coordinate_Progress_Group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                style="@style/ProgressCircleSmall"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Coordinate_Data_Group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:visibility="gone">
            <TextView
                android:id="@+id/Coordinate_Latitude_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end|center_vertical"
                android:padding="2dp"
                android:textColor="?attr/defaultTextColor"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/Coordinate_Longitude_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end|center_vertical"
                android:padding="2dp"
                android:textColor="?attr/defaultTextColor"/>

            <TextView
                android:id="@+id/Coordinate_Altitude_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="end|center_vertical"
                android:padding="2dp"
                android:textColor="?attr/defaultTextColor"/>

            <TextView
                android:id="@+id/Coordinate_Speed_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end|center_vertical"
                android:padding="2dp"
                android:textColor="?attr/defaultTextColor"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>