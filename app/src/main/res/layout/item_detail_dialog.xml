<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ContentDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="?attr/viewPagerBackground">
    <LinearLayout
        android:id="@+id/Item_Detail_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TableLayout
            android:id="@+id/Item_Detail_Table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View style="@style/Divider" android:visibility="gone" android:tag="hd0"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="0">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title1"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text1"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd0"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title2"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text2"/>
            </TableRow>

            <View style="@style/Divider" android:visibility="gone" android:tag="hd1"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="1">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title3"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text3"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd2"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title4"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text4"/>
            </TableRow>

            <View style="@style/Divider" android:visibility="gone" android:tag="hd2"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="2">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title5"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text5"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd4"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title6"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text6"/>
            </TableRow>

            <View style="@style/Divider" android:visibility="gone" android:tag="hd3"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="3">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title7"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text7"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd6"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title8"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text8"/>
            </TableRow>

            <View style="@style/Divider" android:visibility="gone" android:tag="hd4"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="4">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title9"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text9"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd8"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title10"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text10"/>
            </TableRow>

            <View style="@style/Divider" android:visibility="gone" android:tag="hd5"/>

            <TableRow style="@style/DetailTableRow" android:visibility="gone" android:tag="5">
                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title11"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text11"/>

                <View style="@style/DetailVerticalDivider"
                    android:tag="vd10"/>

                <TextView
                    style="@style/DetailTitle"
                    android:id="@+id/Item_Detail_Title12"/>
                <TextView
                    style="@style/DetailText"
                    android:id="@+id/Item_Detail_Text12"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/Item_Detail_Graph_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:id="@+id/Item_Detail_Graph_Progress"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <com.nikolaiapps.orbtrack.Graph
                android:id="@+id/Item_Detail_Graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Item_Detail_3d_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:id="@+id/Item_Detail_3d_Progress"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <FrameLayout
                android:id="@+id/Item_Detail_3d_Frame"
                android:layout_width="match_parent"
                android:layout_height="260dp">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/Item_Detail_3d_View"
                    android:name="com.nikolaiapps.orbtrack.Whirly$PreviewFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="itemDetail3dView"/>

                <FrameLayout
                    android:id="@+id/Item_Detail_3d_Close_Frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top">
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/Item_Detail_3d_Close_Button"
                        style="@style/FloatingButton"
                        android:alpha="0.5"
                        app:backgroundTint="@color/transparent"
                        app:srcCompat="@drawable/ic_close_white"
                        app:fabSize="mini"/>
                </FrameLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/Item_Detail_3d_Fullscreen_Button"
                    style="@style/FloatingButton"
                    android:layout_gravity="end|bottom"
                    android:alpha="0.5"
                    app:backgroundTint="@color/transparent"
                    app:srcCompat="@drawable/ic_fullscreen_white"
                    app:fabSize="mini"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Item_Detail_Info_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:id="@+id/Item_Detail_Info_Progress"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <com.nikolaiapps.orbtrack.ScrollTextView
                style="@style/DetailText"
                android:id="@+id/Item_Detail_Info_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:text="@string/title_loading_dots"
                android:autoLink="web"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            style="@style/DetailTableRow"
            android:id="@+id/Item_Detail_Progress_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:id="@+id/Item_Detail_Progress"
                android:layout_width="180dp"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/DetailText"
                android:id="@+id/Item_Detail_Progress_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"/>
        </LinearLayout>

        <View style="@style/Divider" android:id="@+id/Item_Detail_Button_Divider" android:visibility="gone"/>

        <LinearLayout
            style="@style/DetailTableRow"
            android:id="@+id/Item_Detail_Button_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/Item_Detail_Button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>