                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Duration_Text_Row" android:padding="5dp" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupText"
                android:text="@string/title_pass_duration"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_Duration_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_Duration_Text_Size_List"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Duration_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Duration_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Duration_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Location_Text_Row" android:padding="5dp" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupText"
                android:text="@string/title_location"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Location_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Location_Text_Size_List"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Location_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Location_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>