                    <com.nikolaiapps.orbtrack.SelectableAutoCompleteTextView
                        android:id="@+id/Widget_Setup_Name_Text_Size_Text_List"
                        style="@style/WidgetSetupMaterialList"/>
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/Widget_Setup_Name_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Name_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <TextView
            android:id="@+id/Widget_Setup_Text_Middle_Title"
            style="@style/WidgetSetupGroupText"
            android:text="@string/title_middle"
            android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Start_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
