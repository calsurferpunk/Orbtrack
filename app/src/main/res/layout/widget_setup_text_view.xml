                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Duration_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Duration_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TextView
            android:id="@+id/Widget_Setup_Text_Bottom_Title"
            style="@style/WidgetSetupGroupText"
            android:text="@string/title_bottom"
            android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Location_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_location"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Location_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Location_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Location_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Location_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>