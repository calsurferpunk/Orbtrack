<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/Widget_Setup_Text_Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Widget_Setup_Global_Text_Switch"
            style="@style/WidgetSetupGlobalSwitch"/>

        <View style="@style/Divider"/>

        <TableRow android:id="@+id/Widget_Setup_Global_Text_Row" style="@style/WidgetSetupRow">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_all"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Global_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Global_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Global_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Global_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <TextView
            android:id="@+id/Widget_Setup_Text_Top_Title"
            style="@style/WidgetSetupGroupText"
            android:text="@string/title_top"
            android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Name_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_name"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Name_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Name_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Name_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Name_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Name_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TextView
            android:id="@+id/Widget_Setup_Text_Middle_Title"
            style="@style/WidgetSetupGroupText"
            android:text="@string/title_middle"
            android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Start_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                android:id="@+id/Widget_Setup_Pass_Start_Text"
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_pass_start"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_Start_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_Start_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Start_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Start_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Start_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_End_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_pass_end"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_End_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_End_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_End_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_End_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_End_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Elevation_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_pass_elevation"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_Elevation_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_Elevation_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Elevation_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Elevation_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Elevation_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_pass_az_start"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Azimuth_Start_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
            <TextView
                style="@style/WidgetSetupStartTitle"
                android:text="@string/title_pass_az_end"/>

            <LinearLayout
                style="@style/WidgetSetupTextOptions">
                <com.nikolaiapps.orbtrack.BorderButton
                    android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Color_Button"
                    style="@style/ColorButton"/>

                <com.nikolaiapps.orbtrack.IconSpinner
                    android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Size_List"
                    style="@style/WidgetSetupList"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Bold_CheckBox"
                    style="@style/WidgetSetupBoldCheckBox"/>

                <CheckBox
                    android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Italic_CheckBox"
                    style="@style/WidgetSetupItalicCheckBox"/>
            </LinearLayout>
        </TableRow>

        <View android:id="@+id/Widget_Setup_Pass_Azimuth_End_Text_Divider" style="@style/Divider" android:visibility="gone"/>

        <TableRow android:id="@+id/Widget_Setup_Pass_Duration_Text_Row" style="@style/WidgetSetupRow" android:visibility="gone">
