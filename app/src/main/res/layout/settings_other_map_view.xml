<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/pageBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/pageBackground">
        <TextView
            style="@style/TitleText"
            android:text="@string/title_map_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:text="@string/title_globe_type"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.IconSpinner
                android:id="@+id/Settings_Map_View_Globe_Type_List"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsDescriptionSwitch"
            android:id="@+id/Settings_Map_View_Show_Globe_Clouds_Switch"
            android:text="@string/title_show_clouds"
            android:visibility="gone"/>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_globe_speed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.PlayBar
                android:id="@+id/Settings_Map_View_Globe_Speed_Scale_Bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:textColor="?attr/defaultTextColor"
                app:buttonColor="?attr/defaultTextColor"/>
        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:text="@string/title_map_type"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.IconSpinner
                android:id="@+id/Settings_Map_View_Map_Type_List"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsDescriptionSwitch"
            android:id="@+id/Settings_Map_View_Show_Map_Clouds_Switch"
            android:text="@string/title_show_clouds"
            android:visibility="gone"/>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_map_speed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.PlayBar
                android:id="@+id/Settings_Map_View_Map_Speed_Scale_Bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:textColor="?attr/defaultTextColor"
                app:buttonColor="?attr/defaultTextColor"/>
        </LinearLayout>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Allow_Rotation_Switch"
            android:text="@string/title_allow_rotation"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_allow_rotation"/>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:text="@string/title_label_data"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.IconSpinner
                android:id="@+id/Settings_Map_View_Information_Location_List"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
             android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_icon_scale"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.PlayBar
                android:id="@+id/Settings_Map_View_Icon_Scale_Bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:textColor="?attr/defaultTextColor"
                app:buttonColor="?attr/defaultTextColor"/>
        </LinearLayout>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Information_Background_Switch"
            android:text="@string/title_show_label_background"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_label_background"/>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Search_Switch"
            android:text="@string/title_show_search"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_search"/>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Zoom_Switch"
            android:text="@string/title_show_zoom"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_zoom"/>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Labels_Always_Switch"
            android:text="@string/title_show_labels_always"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_labels_always"/>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Shadows_Switch"
            android:text="@string/title_show_shadows"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_shadows"/>

        <View style="@style/Divider"/>

        <androidx.appcompat.widget.SwitchCompat
            style="@style/SettingsSwitch"
            android:id="@+id/Settings_Map_View_Show_Stars_Switch"
            android:text="@string/title_show_stars"/>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_stars"/>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/title_show_grid"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="?attr/defaultTextColor"/>

            <com.nikolaiapps.orbtrack.BorderButton
                android:id="@+id/Settings_Map_View_Grid_Color_Button"
                style="@style/ColorButton"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/Settings_Map_View_Use_Grid_Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"/>
        </LinearLayout>

        <TextView
            style="@style/SettingsDescriptionText"
            android:text="@string/desc_show_grid"/>
    </LinearLayout>
</ScrollView>
